{
  "name": "@nodle/graphql-server",
  "version": "1.0.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsiderItDone/nodle.git",
    "directory": "packages/graphql-server"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && tsc -p tsconfig-type.json && npm run copy-key",
    "prepare": "npm run build",
    "copy-key": "copyfiles ./server-ca.pem ./dist/cjs && copyfiles ./server-ca.pem ./dist/esm",
    "start:server": "npm exec -- ts-node -r tsconfig-paths/register index.ts"
  },
  "dependencies": {
    "@nodle/db": "^1.1.0",
    "@nodle/polkadot": "^1.0.0",
    "@nodle/utils": "^1.1.0",
    "@types/express": "^4.17.11",
    "apollo-server": "^2.21.0",
    "apollo-server-express": "^2.24.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "ts-node": "^9.1.1",
    "type-graphql": "^1.1.1",
    "type-graphql-dataloader": "^0.4.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/uuid": "^8.3.4",
    "tsconfig-paths": "^3.9.0"
  }
}
