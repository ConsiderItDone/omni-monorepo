{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2019",
    "noImplicitAny": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "dist/esm",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["jest", "@types/node"]
  },
  "files": ["index.ts"]
}
