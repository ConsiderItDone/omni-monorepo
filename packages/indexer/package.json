{
  "name": "@nodle/indexer",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsiderItDone/nodle.git",
    "directory": "packages/indexer"
  },
  "scripts": {
    "build": "npm exec tsc",
    "prepare": "npm run build",
    "start:indexer": "npm exec -- ts-node src/run.ts",
    "migrate:up": "npm exec ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:down": "npm exec ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "dependencies": {
    "@polkadot/api": "2.3.2-2",
    "amqplib": "^0.7.1",
    "apollo-server": "^2.21.0",
    "dotenv": "^8.2.0",
    "envalid": "^7.0.0",
    "graphql-amqp-subscriptions": "^1.1.2",
    "ts-node": "^9.1.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "typeorm-model-generator": "^0.4.5"
  }
}
