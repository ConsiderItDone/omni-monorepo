{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "./dist/esm",
    "paths": {
      "@omni/*": ["./packages/*"],
      "@omni": ["./packages"]
    }
  }
}
