{
  "name": "nodle",
  "version": "1.0.0",
  "description": "Nodle monorepo",
  "scripts": {
    "build:indexer": "npm run build --prefix packages/indexer",
    "build:utils": "npm run build --prefix packages/utils",
    "build:db": "npm run build --prefix packages/db",
    "build:server": "npm run build --prefix packages/graphql-server",
    "build:all": "npm run build:db & npm run build:indexer & npm run build:utils & npm run build:server",
    "start": "npm run start:indexer --prefix packages/indexer",
    "start:server": "npm run start:server --prefix packages/graphql-server"
  },
  "workspaces": [
    "./packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConsiderItDone/nodle.git"
  },
  "homepage": "https://github.com/ConsiderItDone/nodle#readme",
  "engines": {
    "npm": "^7.0.0"
  },
  "dependencies": {
    "@polkadot/api": "^3.11.1"
  }
}
