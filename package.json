{
  "name": "nodle",
  "version": "1.0.0",
  "description": "Nodle monorepo",
  "scripts": {
    "lint": "npm run prettier-check & npm exec -- eslint --max-warnings=0 --ext=ts,tsx ./packages",
    "prettier-format": "npm exec -- prettier --write ./packages",
    "prettier-check": "npm exec -- prettier --check ./packages",
    "build:indexer": "npm run build --prefix packages/indexer",
    "build:backfiller": "npm run build --prefix packages/backfiller",
    "build:utils": "npm run build --prefix packages/utils",
    "build:db": "npm run build --prefix packages/db",
    "build:server": "npm run build --prefix packages/graphql-server",
    "build": "npm run build:db & npm run build:indexer & npm run build:utils & npm run build:server & npm run build:backfiller",
    "start:indexer": "npm run start:indexer --prefix packages/indexer",
    "start:server": "npm run start:server --prefix packages/graphql-server",
    "start:backfiller": "npm run start:backfiller --prefix packages/backfiller"
  },
  "workspaces": {
    "packages": [
      "./packages/db",
      "./packages/utils",
      "./packages/indexer",
      "./packages/graphql-server",
      "./packages/backfiller",
      "./packages/polkadot"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConsiderItDone/nodle.git"
  },
  "homepage": "https://github.com/ConsiderItDone/nodle#readme",
  "engines": {
    "npm": "^7.0.0"
  },
  "devDependencies": {
    "@polkadot/api": "2.3.2-2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "2.2.1"
  },
  "dependencies": {}
}
